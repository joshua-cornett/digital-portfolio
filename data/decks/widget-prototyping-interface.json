                "label": "Workflow",
                "content": [
                  "Custom builds",
                  "Manual QA",
                  "High variation"
                ]
              },
              "C": {
                "label": "Delivery",
                "content": [
                  "24-hour SLA",
                  "Unbroken throughput"
                ]
              },
              "D": {
                "label": "Challenge",
                "content": [
                  "No new hires",
                  "No automation"
                ]
              }
            }
          },
          "steps": [
            {
              "body": {
                "add": [
                  "Sustained delivery under high demand required an entirely new approach."
                ]
              }
            }
          ]
        }
