          "type": "narrative",
          "base": {
            "heading": "Scaling Myself, Not Templates",
            "body": "Templates helped but couldn\u2019t keep up with the custom nature of widget work. I needed to scale my own workflow\u2014dynamically.",
            "readings": {
              "A": {
                "label": "Insight",
                "content": [
                  "Templates \u2260 Systems",
                  "Custom logic everywhere"
                ]
              },
              "B": {
                "label": "Tradeoffs",
                "content": [
                  "No time for buy-in",
                  "Needed self-sufficiency"
                ]
              },
              "C": {
                "label": "Decision",
                "content": [
                  "Tool must support solo throughput"
                ]
              },
              "D": {
                "label": "Vision",
                "content": [
                  "Config-driven logic",
                  "Preview-first design"
                ]
              }
            }
          },
          "steps": [
            {
              "body": {
                "add": [
                  "Systemization was the only path to sustainability."
                ]
              }
            }
          ]
        }
